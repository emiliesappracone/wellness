{% extends 'admin/admin.html.twig' %}

{% block content %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-icon alert-dismissible alert-{{ label }}" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>
                <strong>{{ message }}</strong>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="background-white p20 mb50">
    <h2 class="page-title">{{ action }} internaute</h2>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row" style="background-color: #F0F0F0;padding:1em;margin:1em;">
        <h4 class="col-md-12"><b>Informations internaute</b></h4>
        <div class="form-group col-md-4">
            {{ form_label(form.firstname) }}
            {{ form_widget(form.firstname, { 'attr': {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group col-md-4">
            {{ form_label(form.lastname) }}
            {{ form_widget(form.lastname, { 'attr': {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group col-md-4">
            <div class="checkbox">
                {{ form_widget(form.isSubToNewsletter) }}
                {{ form_label(form.isSubToNewsletter) }}
            </div>
        </div>
    </div>
    <div class="row" style="padding:1em;margin:1em;">
        <h4 class="col-md-12"><b>Informations utilisateur</b></h4>

        {#<div class="form-group col-md-4">#}
        {#{{ form_label(form.password) }}#}
        {#{{ form_widget(form.password, { 'attr': {'class' : 'form-control'}}) }}#}
        {#</div>#}
        <div class="form-group col-md-4">
            {{ form_label(form.basicEmail) }}
            {{ form_widget(form.basicEmail, { 'attr': {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group col-md-4">
            {{ form_label(form.addressNum) }}
            {{ form_widget(form.addressNum, { 'attr': {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group col-md-4">
            {{ form_label(form.addressStreet) }}
            {{ form_widget(form.addressStreet, { 'attr': {'class' : 'form-control'}}) }}
        </div>
        {#<div class="form-group col-md-4">#}
        {#{{ form_label(form.registeredAt) }}#}
        {#{{ form_widget(form.registeredAt) }}#}
        {#</div>#}
        <div class="form-group col-md-4">
            {{ form_label(form.zipCode) }}
            {{ form_widget(form.zipCode, { 'attr': {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group col-md-4">
            {{ form_label(form.locality) }}
            {{ form_widget(form.locality, { 'attr': {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group col-md-4">
            {{ form_label(form.city) }}
            {{ form_widget(form.city, { 'attr': {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group col-md-4">
            <div class="checkbox">
                {{ form_widget(form.isRegistered) }}
                {{ form_label(form.isRegistered) }}
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="checkbox">
                {{ form_widget(form.isBanned) }}
                {{ form_label(form.isBanned) }}
            </div>
        </div>

        <div class="col-md-12">
            {{ form_widget(form.submit, { 'attr' : { 'class' : 'btn btn-primary' }}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}