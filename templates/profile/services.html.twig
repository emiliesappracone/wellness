{% extends 'profile/profile.html.twig' %}

{% block container %}
    <div class="content">
        <div class="page-title">
            <h1>Edit Profile</h1>
        </div><!-- /.page-title -->

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-icon alert-dismissible alert-{{ label }}" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <i class="fa fa-times" aria-hidden="true"></i>
                    </button>
                    <strong>{{ message }}</strong>
                </div>
            {% endfor %}
        {% endfor %}
        <form action="{{ path('profile.services') }}" method="post">
            <div class="background-white p20 mb30">
                <h3 class="page-title">
                    Services
                    <button type="submit" id="changePassword" class="btn btn-primary btn-xs pull-right">Change</button>
                </h3>
                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
        </form>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/js/profil.js') }}"></script>
{% endblock %}