{{ form_start(form) }}
<div class="background-white p20 mb30">
    <h3 class="page-title">
        Contact Information

        <button type="submit" class="btn btn-primary btn-xs pull-right">Save</button>
    </h3>

    <div class="row mb-4">
        <div class="form-group col-sm-6">
            <label>Image</label>
            {#{{ form_widget(form.picture) }}#}
        </div>
        <div class="col-sm-6">
            <p>Image</p>
            <!-- IF surfer haven't an image : temp image -->
            {% if user.picture is null %}
                <img src="{{ asset('assets/img/tmp/agent-2.jpg') }}" alt="User Photo" width="200">
            {% else %}
                <img src="{{ asset('images/') ~ user.picture.path }}" alt="User Photo" width="200">
            {% endif %}
        </div>
    </div>
    <div class="row mb-4">
        <div class="form-group col-sm-6">
            <label>Logo</label>
            {#{{ form_widget(form.logo) }}#}
        </div>
        <div class="col-sm-6">
            <p>Logo</p>
            <!-- IF surfer haven't an image : temp image -->
            {% if user.logo is null %}
                <img src="{{ asset('assets/img/tmp/agent-2.jpg') }}" alt="User Photo" width="200">
            {% else %}
                <img src="{{ asset('images/') ~ user.logo.path }}" alt="User Photo" width="200">
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            <label>Name</label>
            {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control' }}) }}
        </div><!-- /.form-group -->

        <div class="form-group col-sm-6">
            <label>E-mail</label>
            {{ form_widget(form.contactEmail, { 'attr' : { 'class' : 'form-control' }}) }}
        </div><!-- /.form-group -->

        <div class="form-group col-sm-6">
            <label>Phone</label>
            {{ form_widget(form.phone, { 'attr' : { 'class' : 'form-control' }}) }}
        </div><!-- /.form-group -->

        <div class="form-group col-sm-6">
            <label>VAT</label>
            {{ form_widget(form.vat, { 'attr' : { 'class' : 'form-control' }}) }}
        </div><!-- /.form-group -->

        <div class="form-group col-sm-6">
            <label>Website</label>
            {{ form_widget(form.website, { 'attr' : { 'class' : 'form-control' }}) }}
        </div><!-- /.form-group -->
    </div><!-- /.row -->
</div>


<div class="background-white p20 mb30">
    <h3 class="page-title">
        Address

        <button type="submit" class="btn btn-primary btn-xs pull-right">Save</button>
    </h3>

    <div class="row">
        <div class="form-group col-sm-6">
            <label>Locality</label>
            {{ form_widget(form.locality, { 'attr' : { 'class' : 'form-control' }}) }}
        </div><!-- /.form-group -->

        <div class="form-group col-sm-6">
            <label>City</label>
            {{ form_widget(form.city, { 'attr' : { 'class' : 'form-control' }}) }}
        </div><!-- /.form-group -->

        <div class="form-group col-sm-6">
            <label>Street</label>
            {{ form_widget(form.addressStreet, { 'attr' : { 'class' : 'form-control' }}) }}
        </div><!-- /.form-group -->

        <div class="form-group col-sm-3">
            <label>House Number</label>
            {{ form_widget(form.addressNum, { 'attr' : { 'class' : 'form-control' }}) }}
        </div><!-- /.form-group -->

        <div class="form-group col-sm-3">
            <label>ZIP</label>
            {{ form_widget(form.zipCode, { 'attr' : { 'class' : 'form-control' }}) }}
        </div><!-- /.form-group -->
    </div><!-- /.row -->
</div>

<div class="background-white p20 mb30">
    <h3 class="page-title">
        Biography

        <button type="submit" class="btn btn-primary btn-xs pull-right">Save</button>
    </h3>

    {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' }}) }}
</div>
{{ form_end(form) }}