{% extends 'front/front.html.twig' %}

{% block title %}{{ NameSite }} - Service{% endblock %}

{% block container %}
    <div class="col-sm-12">
    <h1>{{ service.id }} - {{ service.name }}</h1>
    <div>{{ service.description }}</div>
    <div class="cards-simple-wrapper">
        {% if service.provider is not empty %}
        <hr/>
        <h3>Prestataires</h3>
        <div class="row">
            {% for provider in service.provider %}
            <div class="col-sm-6 col-md-4 col-lg-3">
                {% if provider.logo is not null %}
                <div class="card-simple" style="background-image: url({{ provider.logo.name }})">
                    {% else %}
                    <div class="card-simple" style="background-image: url({{ asset('assets/img/tmp/agent-2.jpg') }})">
                        {% endif %}
                        <div class="card-simple-background"></div>
                        <div class="card-simple-content">
                            <h2>
                                <a href="{{ path("provider.one", {"slug":provider.slug}) }}">{{ provider.name }}</a>
                            </h2>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}